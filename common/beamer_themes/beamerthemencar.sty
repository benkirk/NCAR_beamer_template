\NewEnviron{NCARprettyframe}[1][common/images/wallpaper/NCAR_Clouds]{%

  \setbeamertemplate{background}{\includegraphics[width=\paperwidth,height=\paperheight]{#1}}

  % Headline on title-like page
  \setbeamertemplate{headline}{}
  % Footline on title-like page
  \setbeamertemplate{footline}{}

  \setbeamercolor*{block title}{fg=DeepBlue,bg=}
  \setbeamercolor*{block title example}{fg=HilightGreen,bg=}
  \setbeamercolor*{block body}{fg=white,bg=black}
  \setbeamercolor*{block body example}{fg=black,bg=white}

  \addtobeamertemplate{block begin}{\pgfsetfillopacity{0.8}}{\pgfsetfillopacity{1}}
  %\addtobeamertemplate{block alerted begin}{\pgfsetfillopacity{0.5}}{\pgfsetfillopacity{1}}
  \addtobeamertemplate{block example begin}{\pgfsetfillopacity{0.8}}{\pgfsetfillopacity{1}}

  \begin{frame}
    \BODY
  \end{frame}

  %\addtobeamertemplate{block begin}{\pgfsetfillopacity{1}}{\pgfsetfillopacity{1}}
  %\addtobeamertemplate{block alerted begin}{\pgfsetfillopacity{1}}{\pgfsetfillopacity{1}}
  %\addtobeamertemplate{block example begin}{\pgfsetfillopacity{1}}{\pgfsetfillopacity{1}}
}



