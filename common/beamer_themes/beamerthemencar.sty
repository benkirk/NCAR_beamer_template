\NewEnviron{NCARprettyframe}[1][common/images/wallpaper/NCAR_Clouds]{%

  \setbeamertemplate{background}{\includegraphics[width=\paperwidth,height=\paperheight]{#1}}

  % Headline on title-like page
  \setbeamertemplate{headline}{}
  % Footline on title-like page
  \setbeamertemplate{footline}{}

  \setbeamercolor*{block title}{fg=DeepBlue,bg=}
  \setbeamercolor*{block title example}{fg=HilightGreen,bg=}
  \setbeamercolor*{block body}{fg=CoolGray1,bg=black}
  \setbeamercolor*{block body example}{fg=black!90,bg=CoolGray1}

%  \setbeamertemplate{block begin}{%
%    %
%    \setbeamercolor{itemize subitem}{fg=white}%
%    \setbeamercolor{itemize subsubitem}{fg=white}%
%    \setbeamercolor{enumerate item}{fg=white}%
%    \setbeamercolor{enumerate subitem}{fg=white}%
%    \setbeamercolor{enumerate subsubitem}{fg=white}%
%  }

  \addtobeamertemplate{block begin}{%
    \setbeamercolor{itemize item}{fg=CoolGray1}%
    \setbeamercolor{itemize subitem}{fg=CoolGray1}%
    \setbeamercolor{itemize subsubitem}{fg=CoolGray1}%
    \setbeamercolor{enumerate item}{fg=CoolGray1}%
    \setbeamercolor{enumerate subitem}{fg=CoolGray1}%
    \setbeamercolor{enumerate subsubitem}{fg=CoolGray1}%
    \pgfsetfillopacity{0.9}}{\pgfsetfillopacity{1}%
  }
  \addtobeamertemplate{block example begin}{%
    \setbeamercolor*{normal text}{fg=black!90}%
    \setbeamercolor{itemize item}{fg=black!90}%
    \setbeamercolor{itemize subitem}{fg=black!90}%
    \setbeamercolor{itemize subsubitem}{fg=black!90}%
    \setbeamercolor{enumerate item}{fg=black!90}%
    \setbeamercolor{enumerate subitem}{fg=black!90}%
    \setbeamercolor{enumerate subsubitem}{fg=black!90}%
    \pgfsetfillopacity{0.9}}{\pgfsetfillopacity{1}%
  }
  \addtobeamertemplate{block alerted begin}{\pgfsetfillopacity{0.9}}{\pgfsetfillopacity{1}}

  \begin{frame}
    \BODY
  \end{frame}
}



